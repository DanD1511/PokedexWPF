<Window x:Class="PokedexMVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokedexMVVM"
        mc:Ignorable="d"
        Title="Pokédex Digital" 
        Height="600" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#1E1E2E">

    <Window.Resources>
        <!-- Colores Pokémon -->
        <SolidColorBrush x:Key="PokemonRed" Color="#DC143C"/>
        <SolidColorBrush x:Key="PokemonBlue" Color="#4169E1"/>
        <SolidColorBrush x:Key="PokemonYellow" Color="#FFD700"/>
        <SolidColorBrush x:Key="DarkBackground" Color="#1E1E2E"/>
        <SolidColorBrush x:Key="CardBackground" Color="#2D2D42"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#B8B8D1"/>

        <!-- Estilo para botones modernos -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PokemonRed}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="25"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" 
                                                Direction="270" 
                                                ShadowDepth="3" 
                                                Opacity="0.3" 
                                                BlurRadius="8"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF1744"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#C62828"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para TextBox moderno -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="{StaticResource PokemonBlue}"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Focusable="False"
                                        HorizontalScrollBarVisibility="Hidden"
                                        VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource PokemonYellow}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para ListBox moderno -->
        <Style x:Key="ModernListBox" TargetType="ListBox">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBox">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="15"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" 
                                                Direction="270" 
                                                ShadowDepth="2" 
                                                Opacity="0.2" 
                                                BlurRadius="10"/>
                            </Border.Effect>
                            <ScrollViewer>
                                <ItemsPresenter/>
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para items de la lista -->
        <Style x:Key="ModernListBoxItem" TargetType="ListBoxItem">
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="Transparent"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}"
                                Margin="{TemplateBinding Margin}">
                            <ContentPresenter/>
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#404054"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource PokemonBlue}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Fondo con gradiente sutil -->
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#1E1E2E" Offset="0"/>
                <GradientStop Color="#2D2D42" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>

        <!-- Header con título -->
        <Border Grid.Row="0" 
                Grid.Column="1" 
                Background="{StaticResource PokemonRed}"
                CornerRadius="15"
                Margin="0,15,0,10">
            <Border.Effect>
                <DropShadowEffect Color="#000000" 
                                Direction="270" 
                                ShadowDepth="3" 
                                Opacity="0.4" 
                                BlurRadius="12"/>
            </Border.Effect>
            <Grid>
                <TextBlock Text="🔴 POKÉDEX DIGITAL"
                          FontSize="24"
                          FontWeight="Bold"
                          Foreground="{StaticResource TextPrimary}"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Contenido principal -->
        <Grid Grid.Row="1" Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Sección de búsqueda -->
            <Border Grid.Row="0" 
                    Background="{StaticResource CardBackground}"
                    CornerRadius="15"
                    Padding="30,25">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" 
                                    Direction="270" 
                                    ShadowDepth="2" 
                                    Opacity="0.2" 
                                    BlurRadius="10"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Buscar Pokémon por ID"
                              FontSize="16"
                              FontWeight="SemiBold"
                              Foreground="{StaticResource TextSecondary}"
                              Margin="0,0,0,15"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                                Style="{StaticResource ModernTextBox}"
                                Text="{Binding PokemonID}"
                                FontSize="16"
                                VerticalAlignment="Center"/>

                        <Button Grid.Column="2"
                               Style="{StaticResource ModernButton}"
                               Command="{Binding GetPokemonByIDCommand}"
                               Content="🔍 Buscar Pokémon"
                               FontSize="14"
                               MinWidth="160"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Lista de resultados -->
            <Border Grid.Row="2" 
                    Background="{StaticResource CardBackground}"
                    CornerRadius="15"
                    Padding="20">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" 
                                    Direction="270" 
                                    ShadowDepth="2" 
                                    Opacity="0.2" 
                                    BlurRadius="10"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                              Text="📋 Resultados de Búsqueda"
                              FontSize="16"
                              FontWeight="SemiBold"
                              Foreground="{StaticResource TextSecondary}"/>

                    <ListBox Grid.Row="2"
                            Style="{StaticResource ModernListBox}"
                            ItemContainerStyle="{StaticResource ModernListBoxItem}"
                            ItemsSource="{Binding PokemonList}"
                            FontSize="14">
                        <!-- Template personalizado para mostrar mejor la información del Pokémon -->
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0"
                                           Background="{StaticResource PokemonYellow}"
                                           CornerRadius="8"
                                           Padding="8,4"
                                           Margin="0,0,10,0">
                                        <TextBlock Text="🔶" 
                                                  FontSize="12"
                                                  Foreground="#1E1E2E"
                                                  FontWeight="Bold"/>
                                    </Border>
                                    <TextBlock Grid.Column="1"
                                              Text="{Binding}"
                                              FontSize="14"
                                              VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
        </Grid>

        <!-- Footer decorativo -->
        <Border Grid.Row="2" 
                Grid.Column="1"
                Background="{StaticResource PokemonBlue}"
                CornerRadius="15"
                Margin="20,10,20,20"
                Height="40"
                VerticalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect Color="#000000" 
                                Direction="270" 
                                ShadowDepth="2" 
                                Opacity="0.3" 
                                BlurRadius="8"/>
            </Border.Effect>
            <Button Content="⚡ Gotta catch 'em all! ⚡"
                      FontSize="14" Cursor="Hand"
                      FontWeight="SemiBold" Background="Transparent" Command="{Binding GetAllPokemonsCommand}"
                      Foreground="{StaticResource TextPrimary}"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center" Width="760" Height="40"/>
        </Border>
    </Grid>
</Window>